#:import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition:FadeTransition()
    MainScreen:
    OptionsScreen:
    GameScreen:

<MainScreen>:
    name:"main"

    BoxLayout:
        orientation: 'vertical'
        padding:200
        spacing:30

        TextInput:
            id: mood_name
            hint_text:"mood to play"


        Button:
            on_release:app.root.current = "game"
            text:"game"
            font_size:30

        Button:
            on_release:app.root.current = "options"
            text:"Options"
            font_size:30



<OptionsScreen>:
    name:"options"
    Button:
        pos_hint:"top":0
        on_release:app.root.current = "main"
        text:"main"
        font_size:50
        size_hint: 0.3, 0.3

        # positioned at 0 % right and 100 % up / top
        # from bottom left, i.e x, top = 0, 100 from bottom left:
        pos_hint: {"x":0, "top":1}

<GameScreen>:
    name:"game"
    Button:
        on_release:app.root.current = "main"
        text:"main"
        font_size:50
        size_hint: 0.3, 0.3

        # positioned at 0 % right and 100 % up / top
        # from bottom left, i.e x, top = 0, 100 from bottom left:
        pos_hint: {"x":0, "top":1}