#:import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition:FadeTransition()
    MainScreen:
    OptionsScreen:
    GameScreen:

<MainScreen>:
    name:"main"

    BoxLayout:
        orientation: 'vertical'
        padding:200
        spacing:30

        TextInput:
            id: mood_name
            multiline:False
            hint_text:"mood to play"
            id: mood_input
            on_text: app.process()
            on_text_validate:app.on_text_validate()

        Button:
            on_release:app.root.current = "game"
            text:"game"
            font_size:30

        Button:
            on_release:app.root.current = "options"
            text:"Options"
            font_size:30


<NavButton@Button>
    size_hint: None, None
    size: 100, 50
    pos_hint: {'right': 1, 'top': 1}
    on_release:app.root.current = "main"
    text:"main"
    font_size:20

<OptionsScreen>:
    name:"options"
    NavButton

<GameScreen>:
    name:"game"
    NavButton
